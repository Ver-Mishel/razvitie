.portfolio
	display flex
	flex-direction row
	align-items flex-start
	&__body
		width 50%
		&__column
			width 50%
			img
				width 100%
			&__item
				position relative
		&__row
			display flex
			flex-direction row
			padding-bottom 40%
			position relative
			&__item
				position absolute
				height 100%
				top 0
				&:first-child
					left 0
				&:last-child
					right 0
					text-align right
				img
					height 100%
		&:first-child
			display flex
			flex-direction row
		&:last-child
			display flex
			flex-direction column
	&__item
		font-size 0
		&:hover
			.portfolio__item__hidden-block
				opacity 1
				transition 0.5s
		&__hidden-block
			display flex
			flex-direction row
			opacity 0
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background rgba(24,24,24,0.89)
			&__left
				display flex
				flex-direction column
				justify-content center
				align-items center
				width 60px
				a
					width 41px
					height 41px
					display block
					margin 7% 10px
					&:hover
						transform rotate(360deg)
						transition 0.5s
				&__ic1
					background-image url("../images/main/portfolio/icon-1.png")
				&__ic2
					background-image url("../images/main/portfolio/icon-2.png")
				&__ic3
					background-image url("../images/main/portfolio/icon-3.png")
				&__ic4
					background-image url("../images/main/portfolio/icon-4.png")
			&__right
				display flex
				flex-direction column
				justify-content center
				align-items flex-start
				padding-left 25px
				padding-right 50px
				h5
					font-size 18px
					font-weight 700
					color #fff
					margin-bottom 5px
				p
					font-size 14px
					color #b4b7be
					line-height 1.3
				.btn
					font-size 14px
					margin-top 20px
					padding 0 15px
