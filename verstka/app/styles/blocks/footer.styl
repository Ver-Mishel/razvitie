footer
	background #383838
	.pre-footer
		display flex
		flex-flow row wrap
		position relative
		padding 45px 0
		&__part
			width 50%
			display flex
			flex-direction row
			&__photo-block
				display flex
				flex-flow row wrap
				justify-content flex-end
				max-width 750px
				margin-left auto
				&__item
					width 110px
					height 110px
					margin 0 0 10px 10px
					background-image url("../images/main/footer-img.png")
					background-repeat no-repeat
					background-size cover
					overflow hidden
					display flex
					flex-direction row
					justify-content center
					align-items center
			&__articles-block
				padding 0 65px 0 75px
				max-width 365px
				&__article
					font-size 13px
					color #fff
					p
						line-height 1.8
						font-weight 300
					time
						color #6e6e6e
						line-height 1.8
						font-weight 300
					a
						font-size 12px
						color #f3bc33
						font-weight 400
						margin-left 15px
				&__line
					width 65px
					border-top 2px solid #484848
					margin 15px 0
				.btn
					margin-top 20px
			&__navigation
				display flex
				flex-direction row
				&__column
					display flex
					flex-direction column
					margin-right 40px
					a
						color #fff
						text-decoration underline
						margin-bottom 20px
	.footer-body
		background #292929
		&__content
			display flex
			flex-direction row
			justify-content space-between
			align-items center
			max-width 1465px
			padding 0 15px
			height 55px
			margin 0 auto
			&__copyright
				font-size 14px
				color #8c8c8c
				font-weight 300
				width 230px
			.go-top
				background-image url("../images/main/arrow-top.png")
				background-repeat no-repeat
				background-size cover
				width 41px
				height 41px
				display block
			.social-block
				display flex
				flex-direction row
				justify-content space-between
				align-items flex-start
				width 230px
				a
					background-repeat no-repeat
					background-size cover
					width 28px
					height 30px
				&__inst
					background-image url("../images/main/social/inst.png")
					width 30px!important
				&__linin
					background-image url("../images/main/social/linin.png")
					width 29px!important
				&__fb
					background-image url("../images/main/social/fb.png")
				&__tumblr
					background-image url("../images/main/social/tumblr.png")
				&__twitter
					background-image url("../images/main/social/twitter.png")
					height 28px!important
				&__google
					background-image url("../images/main/social/google.png")
